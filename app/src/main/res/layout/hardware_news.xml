<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".hardwarenews">

    <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="175dp"
            android:id="@+id/crd0"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg2"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPUTEX 2019"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dewan Pengembangan Perdagangan Eksternal Taiwan (TAITRA) hari ini mengumumkan bahwa Konferensi Pers Internasional COMPUTEX 2019 akan diadakan dengan Keynote oleh...."
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Read more.."
                    android:layout_marginLeft="250dp"
                    android:paddingTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>